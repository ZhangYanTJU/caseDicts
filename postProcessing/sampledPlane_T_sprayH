FoamFile
{
    version         2.0;
    format          ascii;
    class           dictionary;
    location        system;
    object          sampleLineForMixtureFraction;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

type surfaces;

libs ("libsampling.so");

surfaceFormat raw;

interpolationScheme cellPointFace;


fields ( T );

surfaces
(
    sampledPlane
    {
        type    cuttingPlane;
        interpolate true;
        planeType   pointAndNormal;
        pointAndNormalDict
        {
            normal (0 0 1);
            point  (0.0001 0 0);
        }
    }
);


