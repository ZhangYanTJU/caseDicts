FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      sampledCuttingPlane;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

type surfaces;
libs            ("libsampling.so");
interpolationScheme cellPointFace;
surfaceFormat   raw;

surfaces
(
    sampledCuttingPlane
    {
        type    cuttingPlane;
        interpolate false;
        planeType   pointAndNormal;
        pointAndNormalDict
        {
            normal (0 1 0);
            point  (0 0.054 0.054);
        }
    }
);

fields          ( T );


